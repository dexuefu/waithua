<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="User">
    <resultMap id="UserMap" type="User">
        <id property="id" column="id"/>
        <result property="inviteId" column="invite_id"/>
        <result property="priceAskId" column="price_ask_id"/>
        <result property="companyId" column="company_id"/>
        <result property="companyName" column="company_name"/>
        <result property="userId" column="user_id"/>
        <result property="status" column="status"/>
        <result property="aptitudeFile" column="aptitude_file"/>
        <result property="aptitudeFileName" column="aptitude_file_name"/>
        <result property="extraJson" column="extra_json"/>
        <result property="remark" column="remark"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="tb">
        jidd_bid_aptitude
    </sql>

    <sql id="cols_all">
        id,
        <include refid="cols_exclude_id"/>
    </sql>

    <sql id="cols_exclude_id">
        `invite_id`,`price_ask_id`,`company_id`,`company_name`, `user_id`, `status`, `aptitude_file`,`aptitude_file_name`,`extra_json`,`remark`,
        `created_at`, `updated_at`
    </sql>

    <sql id="vals">
        #{inviteId},#{priceAskId},#{companyId},#{companyName},#{userId}, #{status}, #{aptitudeFile},#{aptitudeFileName},#{extraJson},#{remark},
        now(), now()
    </sql>

    <sql id="criteria">
        <where>
            <if test="inviteId != null">AND `invite_id` = #{inviteId}</if>
            <if test="priceAskId != null">AND `price_ask_id` = #{priceAskId}</if>
            <if test="companyId != null">AND `company_id` = #{companyId}</if>
            <if test="status != null">AND `status` = #{status}</if>
            <if test="userId != null">AND `user_id` = #{userId}</if>
        </where>
    </sql>

    <insert id="create" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
        <include refid="tb"/>
        (<include refid="cols_exclude_id"/>)
        VALUES
        (<include refid="vals"/>)
    </insert>

    <select id="findById" parameterType="long" resultMap="UserMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <update id="update" parameterType="User">
        UPDATE
        <include refid="tb"/>
        <set>
            <if test="inviteId != null">`invite_id` = #{inviteId},</if>
            <if test="priceAskId != null">`price_ask_id` = #{priceAskId},</if>
            <if test="companyId != null">`company_id` = #{companyId},</if>
            <if test="companyName != null">`company_name` = #{companyName},</if>
            <if test="status != null">`status` = #{status},</if>
            <if test="aptitudeFile != null">`aptitude_file` = #{aptitudeFile},</if>
            <if test="extraJson != null">`extra_json` = #{extraJson},</if>
            <if test="remark != null">`remark` = #{remark},</if>
            updated_at = now()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM
        <include refid="tb"/>
        WHERE id = #{id}
    </delete>

    <!--  查询记录数  -->
    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM
        <include refid="tb"/>
        <include refid="criteria"/>
    </select>

    <!--  分页  -->
    <select id="paging" parameterType="map" resultMap="UserMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        <include refid="criteria"/>
        LIMIT #{offset}, #{limit}
    </select>

    <select id="list" parameterType="map" resultMap="UserMap">
        SELECT <include refid="cols_all"/>
        FROM <include refid="tb"/>
        <include refid="criteria"/>
    </select>
</mapper>
